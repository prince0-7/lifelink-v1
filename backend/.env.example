ANTHROPIC_API_KEY=

# Storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Vector Database
CHROMA_PERSIST_DIRECTORY=./chroma_db
COLLECTION_NAME=lifelink_memories

# CORS (for frontend)
FRONTEND_URL=http://localhost:5173
